{
  "name": "azalscore-ui",
  "version": "0.5.0-dev",
  "description": "AZALSCORE ERP UI Engine - Production Web + Mobile PWA",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:report": "playwright show-report",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,css}\"",
    "type-check": "tsc --noEmit",
    "azalscore:lint": "tsx ../scripts/frontend/azalscore-linter.ts",
    "scaffold:module": "tsx ../scripts/frontend/scaffold-module.ts",
    "generate:meta": "tsx ../scripts/frontend/generate-module-meta.ts",
    "validate:modules": "tsx ../scripts/frontend/validate-module-structure.ts",
    "validate:meta": "tsx ../scripts/frontend/validate-module-meta.ts",
    "validate:menu-route-sync": "tsx ../scripts/frontend/validate-menu-route-sync.ts",
    "validate:all": "npm run lint && npm run type-check && npm run azalscore:lint && npm run validate:modules && npm run validate:meta && npm run validate:menu-route-sync",
    "generate:sitemap": "tsx scripts/generate-sitemap.ts",
    "seo:validate": "npm run generate:sitemap",
    "prepare": "husky"
  },
  "dependencies": {
    "@hcaptcha/react-hcaptcha": "^1.10.1",
    "@hookform/resolvers": "^3.3.2",
    "@stripe/react-stripe-js": "^2.4.0",
    "@stripe/stripe-js": "^2.2.0",
    "@tanstack/react-query": "^5.8.0",
    "axios": "^1.6.2",
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0",
    "html2canvas": "^1.4.1",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.71.0",
    "react-router-dom": "^6.20.0",
    "zod": "^3.22.4",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.2.38",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "autoprefixer": "^10.4.24",
    "eslint": "^8.54.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.1.7",
    "jsdom": "^22.1.0",
    "lint-staged": "^16.2.7",
    "msw": "^2.12.7",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "^5.3.2",
    "vite": "^5.0.2",
    "vite-plugin-pwa": "^0.17.2",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
