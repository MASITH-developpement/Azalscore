# =============================================================================
# AZALSCORE - HTTP Headers Configuration
# Compatible: Netlify, Cloudflare Pages, Render
# =============================================================================

# Global headers for all pages
/*
  # Security headers - SÉCURITÉ P0
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: camera=(), microphone=(), geolocation=(), payment=(), usb=()

  # HSTS - Force HTTPS (P0 CRITIQUE)
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload

  # Content Security Policy (P0 CRITIQUE)
  # Protège contre XSS, injection de scripts, clickjacking
  Content-Security-Policy: default-src 'self'; script-src 'self' 'wasm-unsafe-eval' https://hcaptcha.com https://*.hcaptcha.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com data:; img-src 'self' data: https: blob:; connect-src 'self' https://api.azalscore.com https://hcaptcha.com https://*.hcaptcha.com wss:; frame-src https://hcaptcha.com https://*.hcaptcha.com; frame-ancestors 'self'; base-uri 'self'; form-action 'self'; upgrade-insecure-requests

  # CORS restreint (P0 - remplacer * par domaines autorisés en production)
  # En développement: Access-Control-Allow-Origin: *
  # En production: configurer via reverse proxy pour domaines spécifiques

  # Cache control
  Cache-Control: public, max-age=3600, s-maxage=86400

  # SEO headers
  X-Robots-Tag: index, follow, max-image-preview:large

# Static assets - long cache
/assets/*
  Cache-Control: public, max-age=31536000, immutable

/*.js
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: application/javascript; charset=utf-8

/*.css
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: text/css; charset=utf-8

# Images
/*.png
  Cache-Control: public, max-age=604800

/*.jpg
  Cache-Control: public, max-age=604800

/*.webp
  Cache-Control: public, max-age=604800

/*.svg
  Cache-Control: public, max-age=604800
  Content-Type: image/svg+xml

# Fonts
/*.woff2
  Cache-Control: public, max-age=31536000, immutable
  Access-Control-Allow-Origin: *

# SEO files - no cache
/robots.txt
  Cache-Control: public, max-age=3600
  Content-Type: text/plain; charset=utf-8
  X-Robots-Tag: noindex

/sitemap.xml
  Cache-Control: public, max-age=3600
  Content-Type: application/xml; charset=utf-8
  X-Robots-Tag: noindex

# AI-specific files
/ai.txt
  Cache-Control: public, max-age=3600
  Content-Type: text/plain; charset=utf-8
  Access-Control-Allow-Origin: *

/llms.txt
  Cache-Control: public, max-age=3600
  Content-Type: text/plain; charset=utf-8
  Access-Control-Allow-Origin: *

/.well-known/*
  Cache-Control: public, max-age=3600
  Access-Control-Allow-Origin: *

/.well-known/ai-plugin.json
  Content-Type: application/json; charset=utf-8
  Access-Control-Allow-Origin: *

# Manifest and PWA
/manifest.webmanifest
  Cache-Control: public, max-age=3600
  Content-Type: application/manifest+json; charset=utf-8

# HTML pages - short cache for freshness
/*.html
  Cache-Control: public, max-age=300, s-maxage=3600
  Content-Type: text/html; charset=utf-8

/
  Cache-Control: public, max-age=300, s-maxage=3600
  Content-Type: text/html; charset=utf-8
