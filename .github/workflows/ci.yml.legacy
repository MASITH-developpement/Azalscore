# AZALS - CI Pipeline
# ====================
# Exécuté sur chaque push et pull request
# Quality gates: linting, security, tests, architecture validation

name: CI

on:
  push:
    branches: [main, develop, 'feature/**', 'fix/**']
  pull_request:
    branches: [main, develop]

env:
  PYTHON_VERSION: "3.10"

jobs:
  # ============================================================================
  # LINT & FORMAT
  # ============================================================================
  lint:
    name: Lint & Format
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: ${{ env.PYTHON_VERSION }}

      - name: Install linting tools
        run: |
          pip install ruff black isort

      - name: Check formatting with Black
        run: black --check --diff app/ tests/ scripts/

      - name: Check imports with isort
        run: isort --check-only --diff app/ tests/ scripts/

      - name: Lint with Ruff
        run: ruff check app/ tests/ scripts/ --output-format=github

  # ============================================================================
  # SECURITY SCAN
  # ============================================================================
  security:
    name: Security Scan
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: ${{ env.PYTHON_VERSION }}

      - name: Install security tools
        run: |
          pip install bandit pip-audit safety

      - name: Run Bandit security scan
        run: |
          bandit -r app/ -f json -o bandit-report.json --severity-level medium -x '**/tests/**' || true
          bandit -r app/ -f txt --severity-level high -x '**/tests/**'

      - name: Check for CVEs with pip-audit
        run: |
          pip-audit -r requirements.txt --ignore-vuln CVE-2024-23342 || true

      - name: Upload Bandit report
        uses: actions/upload-artifact@v4
        if: always()
        with:
          name: bandit-security-report
          path: bandit-report.json

  # ============================================================================
  # ARCHITECTURE VALIDATION
  # ============================================================================
  architecture:
    name: Architecture Validation
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: ${{ env.PYTHON_VERSION }}

      - name: Install dependencies
        run: |
          pip install -r requirements.txt

      - name: Run architecture validator
        run: |
          python scripts/validate_architecture.py

  # ============================================================================
  # TESTS
  # ============================================================================
  test:
    name: Tests
    runs-on: ubuntu-latest
    services:
      postgres:
        image: postgres:15
        env:
          POSTGRES_USER: azals_test
          POSTGRES_PASSWORD: azals_test_password
          POSTGRES_DB: azals_test
        ports:
          - 5432:5432
        options: >-
          --health-cmd pg_isready
          --health-interval 10s
          --health-timeout 5s
          --health-retries 5

    steps:
      - uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: ${{ env.PYTHON_VERSION }}

      - name: Cache pip dependencies
        uses: actions/cache@v4
        with:
          path: ~/.cache/pip
          key: ${{ runner.os }}-pip-${{ hashFiles('requirements.txt') }}
          restore-keys: |
            ${{ runner.os }}-pip-

      - name: Install dependencies
        run: |
          pip install -r requirements.txt
          pip install pytest-cov

      - name: Run tests with coverage
        env:
          DATABASE_URL: postgresql://azals_test:azals_test_password@localhost:5432/azals_test
          SECRET_KEY: test-secret-key-for-ci-only-not-production
          ENVIRONMENT: test
          CORS_ORIGINS: http://localhost:3000
        run: |
          pytest app/core/tests/ -v --cov=app --cov-report=xml --cov-report=term-missing --cov-fail-under=50

      - name: Upload coverage report
        uses: actions/upload-artifact@v4
        if: always()
        with:
          name: coverage-report
          path: coverage.xml

  # ============================================================================
  # QUALITY GATE SUMMARY
  # ============================================================================
  quality-gate:
    name: Quality Gate
    needs: [lint, security, architecture, test]
    runs-on: ubuntu-latest
    if: always()
    steps:
      - name: Check all jobs passed
        run: |
          if [ "${{ needs.lint.result }}" != "success" ] || \
             [ "${{ needs.security.result }}" != "success" ] || \
             [ "${{ needs.architecture.result }}" != "success" ] || \
             [ "${{ needs.test.result }}" != "success" ]; then
            echo "Quality gate FAILED"
            echo "  - Lint: ${{ needs.lint.result }}"
            echo "  - Security: ${{ needs.security.result }}"
            echo "  - Architecture: ${{ needs.architecture.result }}"
            echo "  - Tests: ${{ needs.test.result }}"
            exit 1
          fi
          echo "Quality gate PASSED"
          echo "All checks completed successfully"
